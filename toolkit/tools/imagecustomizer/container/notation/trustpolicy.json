{
    "version": "1.0",
    "trustPolicies": [
        {
            "name": "mcr-azure-linux",
            "registryScopes": [
                "mcr.microsoft.com/azurelinux/base/core"
            ],
            "signatureVerification": {
                "level" : "strict"
            },
            "trustStores": [
                "ca:microsoft-supplychain-2022"
            ],
            "trustedIdentities": [
                "x509.subject: CN=Microsoft SCD Products RSA Signing,O=Microsoft Corporation,L=Redmond,ST=Washington,C=US"
            ]
        }
    ]
}
